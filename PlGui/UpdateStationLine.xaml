        <TextBox x:Name="txtTimeMiniute" HorizontalAlignment="Left" Height="38" Margin="447,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Background="#FFE5F5F0" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtTimeHour" HorizontalAlignment="Left" Height="39" Margin="364,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" FontWeight="Bold" Background="#FFE5F5F0" FontSize="14"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="504,225,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="421,225,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>

    </Grid>
</Window>
